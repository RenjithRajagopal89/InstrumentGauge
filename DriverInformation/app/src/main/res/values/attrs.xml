<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Speedometer">
        <attr name="maxSpeed" format="float"/>
        <attr name="currentSpeed" format="float"/>
        <attr name="indentation" format="integer"/>
        <attr name="needleColor" format="color"/>
        <attr name="rimColor" format="color"/>
        <attr name="labelColor" format="color"/>
        <attr name="labelSize" format="float"/>
        <attr name="readingSize" format="float"/>
        <attr name="speedUnit" format="string"/>
        <attr name="fontName" format="string"/>
    </declare-styleable>
    <declare-styleable name="Oodometer">
        <attr name="readingFont" format="string"/>
        <attr name="distanceTravelled" format="float"/>
        <attr name="distanceUnit" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="float"/>
    </declare-styleable>
</resources>